@using BoardApplication
@model List<BoardApplication.Models.Boardlist>

@{
    ViewBag.Title = "Home Page";
}

<h1>
    게시판
</h1>
<p style="text-align:right">
    <a href="/home" onclick="createPopup()">글쓰기</a>
</p>
<p>
    @ViewBag.Message
</p>

<table class="table">
    <tr>
        <th>
            순번
        </th>
        <th>
            제목
        </th>
        <th>
            작성자
        </th>
        <th>
            작성일
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Number</td>
            <td>@item.Title</td>
            <td>@item.Writer</td>
            <td>@item.Published_data</td>
        </tr>
    }
</table>

<script>
    function createPopup() {
        window.open('/Home/Create', 'popup',
            'width=100','height=200','toolbars=no,scrollbars=no');
    };
</script>