@model BoardApplication.Models.Boardlist


@{
    ViewBag.Title = "Create";
}

<h2>글쓰기</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <div style="text-align:right">
                <input class="btn btn-primary" type="submit" value="저장">
            </div>
        </div>


        <div class="form-group">
            <div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-default">@Html.LabelFor(model => model.Title)</span>
                    @Html.EditorFor(model => model.Title)
                    <!-- <input type="text" class="form-control"> -->
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-default">@Html.LabelFor(model => model.Writer)</span>
                    @Html.EditorFor(model => model.Writer)     
                </div>

                <div class="input-group">
                    <span class="input-group-text">@Html.LabelFor(model => model.Content)</span>
                    @Html.TextAreaFor(model => model.Content)
                </div>

                <!--
                <div>
                    @Html.LabelFor(model => model.Writer)
                    @Html.EditorFor(model => model.Writer)
                </div>
                -->
            </div>
        </div>
    </div>
}



